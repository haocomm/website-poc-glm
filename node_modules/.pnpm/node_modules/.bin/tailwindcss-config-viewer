#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/workspaces/website-poc-glm/node_modules/.pnpm/tailwind-config-viewer@2.0.4_tailwindcss@3.4.18_tsx@4.20.6_yaml@2.8.1_/node_modules/tailwind-config-viewer/cli/node_modules:/workspaces/website-poc-glm/node_modules/.pnpm/tailwind-config-viewer@2.0.4_tailwindcss@3.4.18_tsx@4.20.6_yaml@2.8.1_/node_modules/tailwind-config-viewer/node_modules:/workspaces/website-poc-glm/node_modules/.pnpm/tailwind-config-viewer@2.0.4_tailwindcss@3.4.18_tsx@4.20.6_yaml@2.8.1_/node_modules:/workspaces/website-poc-glm/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/workspaces/website-poc-glm/node_modules/.pnpm/tailwind-config-viewer@2.0.4_tailwindcss@3.4.18_tsx@4.20.6_yaml@2.8.1_/node_modules/tailwind-config-viewer/cli/node_modules:/workspaces/website-poc-glm/node_modules/.pnpm/tailwind-config-viewer@2.0.4_tailwindcss@3.4.18_tsx@4.20.6_yaml@2.8.1_/node_modules/tailwind-config-viewer/node_modules:/workspaces/website-poc-glm/node_modules/.pnpm/tailwind-config-viewer@2.0.4_tailwindcss@3.4.18_tsx@4.20.6_yaml@2.8.1_/node_modules:/workspaces/website-poc-glm/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../tailwind-config-viewer/cli/index.js" "$@"
else
  exec node  "$basedir/../tailwind-config-viewer/cli/index.js" "$@"
fi
