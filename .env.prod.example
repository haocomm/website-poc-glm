# Production Environment Variables Template
# Copy this to .env.prod and update with your production values

# MongoDB Configuration
MONGO_ROOT_USERNAME=your-mongo-root-username
MONGO_ROOT_PASSWORD=your-super-secure-mongo-password
MONGO_APP_USER=chatappuser
MONGO_APP_PASSWORD=your-super-secure-app-password

# Application Configuration
NODE_ENV=production
JWT_SECRET=your-super-secure-jwt-secret-change-in-production-256-bits
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
API_BASE_URL=https://api.yourdomain.com/api

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=3001

# SSL Configuration (if using nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem